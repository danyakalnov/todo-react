{
  "compilerOptions": {
    "module": "es6",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "lib": [
      "ES2015",
      "es2016.array.include",
      "es2017.object",
      "dom"
    ],
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules"
  ]
}